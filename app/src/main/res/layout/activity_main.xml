<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Higher!!"
        android:id="@+id/higherButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower!!"
        android:id="@+id/lowerButton"
        android:layout_below="@+id/guessButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberView"
        android:layout_above="@+id/theGuessView"
        android:layout_alignLeft="@+id/theGuessView"
        android:layout_alignStart="@+id/theGuessView"
        android:layout_marginBottom="48dp"
        android:layout_alignRight="@+id/theGuessView"
        android:layout_alignEnd="@+id/theGuessView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess The Number"
        android:id="@+id/guessButton"
        android:layout_below="@+id/higherButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theGuessView"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/higherButton"
        android:layout_alignLeft="@+id/guessButton"
        android:layout_alignStart="@+id/guessButton"
        android:layout_alignRight="@+id/guessButton"
        android:layout_alignEnd="@+id/guessButton" />

</RelativeLayout>
